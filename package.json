{
  "name": "examples",
  "version": "0.0.1",
  "description": "Useful webpages examples to use during workshops",
  "author": "People & Code",
  "type": "module",
  "scripts": {
    "lint": "eslint . && prettier --check . && stylelint '**/*.{css,scss}'",
    "start": "parcel && npm run static",
    "build": "parcel build --dist-dir dist --public-url /examples",
    "publish": "rm -rf dist && rm -rf .parcel-cache && npm run build && gh-pages -d dist"
  },
  "source": [
    "./src/index.html"
  ],
  "devDependencies": {
    "eslint": "latest",
    "prettier": "latest",
    "stylelint": "latest",
    "parcel": "latest",
    "stylelint-config-standard": "latest"
  }
}
